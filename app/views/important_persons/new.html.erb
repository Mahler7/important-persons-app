<h1>Add an Important Person</h1>

<%= form_tag '/important_persons', method: :post do %>
  
  <div>
    <%= label_tag :first_name %> 
    <%= text_field_tag :first_name %> 
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number %>
  <div>
    <%= label_tag :image_url %>
    <%= text_field_tag :image_url %>
  </div>

  <%= submit_tag "Add Person" %> 

<% end %>