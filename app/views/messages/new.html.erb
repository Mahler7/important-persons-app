<h1>Add A New Message</h1>

<%= form_tag "/messages", method: :post do %>
  
  <div class="title">
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>

  <div class="message">
    <%= label_tag :user_message %>
    <%= text_field_tag :user_message %>
  </div>

  <div class="message-format">
    <%= label_tag :message_format %>
    <%= text_field_tag :message_format %>
    <%= select_tag(:message_format, options_for_select([['Text Message'], ['Email'], ['Email Template']])) %>
  </div>

  <div class="scheduled-time">
    <%= label_tag :scheduled_time %>
    <%= datetime_local_field :message, :scheduled_time %>
  </div>

  <%= hidden_field_tag(:important_person_id, @important_person.id) %>

  <%= submit_tag "Save Message" %>

<% end %>





  