

<% if @message_type == "email" %>

  <h1>Send A New Email</h1>

  <%= form_tag "/messages", method: :post do %>
    
    <div class="title">
      <%= label_tag :title %>
      <%= text_field_tag :title %>
    </div>

    <div class="message">
      <%= label_tag :user_message %>
      <%= text_field_tag :user_message %>
    </div>

    <div class="message-format">
      <%= label_tag :email_template %>
      <%= select_tag(:email_template, options_for_select([['Regular'], ['Birthday'], ['Christmas'], ['Wedding']])) %>
    </div>

    <div class="scheduled-time">
      <%= label_tag :scheduled_time %>
      <%= datetime_local_field :message, :scheduled_time, required: true %>
    </div>

    <div>
      <%= label_tag "Select Important Person the Message is for" %>
      <%= select_tag(:important_person_id, options_from_collection_for_select(@user, "id", "full_name")) %>
    </div>

    <%= hidden_field_tag :message_format, :email %>

    <%= submit_tag "Save Email" %>

  <% end %>

