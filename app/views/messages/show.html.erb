<div class="col-md-12 col-sm-12" id="messages-show-header">
  <h1>Message for <%= @message.important_person.full_name %></h1>
</div>

<div class="messages-show-container">

  <div class="row" id="messages-show-row">

    <div class="col-md-8" id="messages-show-left">
      <img src="<%= @image %>" class="img-responsive-messages-show" alt="An image has not been added for this important person">

      <p><%= link_to "Return to #{@message.important_person.full_name}\'s Profile", "/important_persons/#{@message.important_person.id}" %></p>
    </div>

    <div class="col-md-4" id="messages-show-info">
      <h1> <%= @message.title %></h1>
      <p><b> Message Type: </b><%= @message.message_capitalize %></p>
      <% if @message.scheduled_time == nil %>
        <p><%= link_to "Add Scheduled Time", "/messages/#{@message.id}/edit" %></p>
      <% else %>
        <p><b>Message Scheduled at: </b><br> <%= @message.pretty_scheduled_time %> </p>
      <% end %>

      <p><b> Message: </b><br><%= @message.user_message %></p>

      <p><span><%= link_to "Edit", "/messages/#{@message.id}/edit" %> &nbsp
      <%= link_to "Delete", "/messages/#{@message.id}", method: :delete, data:{confirm: "Are you sure you want to delete this wishlist?"} %></span></p>
    </div>

  </div>
</div>
