<h1>Message for <%= @message.important_person.full_name %></h1>
<img src="<%= @image %>" class="img-responsive">
<h3> <%= @message.title %></h3>
<p> <%= @message.message_format %></p>
<p> <%= @message.scheduled_time %> </p>
<p> <%= @message.user_message %></p>

<%= link_to "Send Email Now", "/messages/send_email/#{@message.id}", method: :post %>

<%= link_to "Send Email Later", "/messages/send_email_later/#{@message.id}", method: :post %>

<div>
  <%= link_to "New", "/messages/new" %>
  <%= link_to "Edit", "/messages/#{@message.id}/edit" %>
  <%= link_to "Delete", "/messages/#{@message.id}", method: :delete, data:{confirm: "Are you sure you want to delete this wishlist?"} %>
</div>

<div>
  <%= link_to "Return to #{@message.important_person.full_name}\'s Profile", "/important_persons/#{@message.important_person.id}" %>
</div>
