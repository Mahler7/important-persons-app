<h1>Message for <%= @message.important_person.full_name %></h1>

<img src="<%= @image %>" class="img-responsive">
<h3> <%= @message.title %></h3>
<p> <%= @message.message_capitalize %></p>
<p> <%= @message.user_message %></p>

<% if @message.scheduled_time == nil %>
  <p><%= link_to "Add Scheduled Time", "/messages/#{@message.id}/edit" %></p>
<% else %>
  <p> <%= @message.pretty_scheduled_time %> </p>
<% end %>

<% if @message.message_format == "email" %>

  <%= link_to "Send Email Now", "/messages/send_email/#{@message.id}", method: :get %>

  <%= link_to "Send Email Later", "/messages/send_email_later/#{@message.id}", method: :get %>

<% elsif @message.message_format == "text" %>
  
  <%= link_to "Send Text Now", "/messages/send_sms/#{@message.id}", method: :get %>

  <%= link_to "Send Text Later", "/messages/send_sms_later/#{@message.id}", method: :get %>

<% elsif @message.message_format == "tweet" %>

  <%= link_to "Send Tweet Now", "/messages/send_tweet/#{@message.id}", method: :get %>

<% end %>

<div>
  <%= link_to "New", "/messages/select" %>
  <%= link_to "Edit", "/messages/#{@message.id}/edit" %>
  <%= link_to "Delete", "/messages/#{@message.id}", method: :delete, data:{confirm: "Are you sure you want to delete this wishlist?"} %>
</div>

<div>
  <%= link_to "Return to #{@message.important_person.full_name}\'s Profile", "/important_persons/#{@message.important_person.id}" %>
</div>
