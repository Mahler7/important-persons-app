<h1>Upcoming Events</h1>

<% @events.each do |event| %>
  <h1> <%= event.name %></h1>
  <% if event.important_person %>
    <img src="<%= event.important_person.image_url %>" class="img-responsive">
  <% end %>
  <h4>Date: <%= event.date %></h4> 
  <h4>Reminder Scheduled: <%= event.reminder %></h4>
  <p> <%= event.description %></p>
  <div>
    <%= link_to "Edit", "/events/#{event.id}/edit" %>
    <%= link_to "Delete", "/events/#{event.id}", method: :delete, data:{confirm: "Are you sure you want to delete this event?"} %>
  </div>
<% end %>